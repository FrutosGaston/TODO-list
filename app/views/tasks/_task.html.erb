<li class="list-group-item">
  <%= task.description %>
  <span class="pull-right">
    <span class="btn btn-xs btn-default">
      <%= link_to '', task_path(task), method: 'delete', class: 'glyphicon glyphicon-trash', data: { confirm: 'Are you sure?' } %>
    </span>
    <span class="btn btn-xs btn-default">
      <%= link_to '', edit_task_path(task), class: 'glyphicon glyphicon-pencil' %>
    </span>
  </span>
</li>